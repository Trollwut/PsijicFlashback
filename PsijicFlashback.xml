<GuiXml>
    <Controls>
        <TopLevelControl name="PsijicFlashback" mouseEnabled="true" movable="true">
            <Dimensions x="200" y="42" />
            <Anchor point="CENTER" />

            <OnUpdate>
                PsijicFlashbackUpdate()
            </OnUpdate>

            <OnMouseDown>
                PsijicFlashbackReset()
            </OnMouseDown>

            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_ThinBackdrop" />
                <Label name="$(parent)Frame" font="ZoFontWindowTitle" color="CFDCBD" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="Counter: ">
                    <AnchorFill />
                </Label>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
